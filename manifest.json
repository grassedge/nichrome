{
    "name": "nichrome",
    "description": "2ch browser",
    "version": "0.0.1.3",
    "manifest_version": 2,
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "public/img/icon_16.png",
        "default_title": "nichrome"
    },
    "icons": {
        "16" : "public/img/icon_16.png",
        "128": "public/img/icon_128.png"
    },
    "permissions": [
        "http://*/*",
        "unlimitedStorage"
    ]
}
